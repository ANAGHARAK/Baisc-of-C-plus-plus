#include <iostream>
using namespace std;
int main() {
    // Write C++ code here
    int n;
    cin>>n;
    int i=1;
    while(i<=n){
       
       int j=1;
       while(j<=n-i+1){
           cout<<j;
           j++;
       }
       int start=i-1;
       while(start){
           cout<<"*";
           start--;
       }
       int st=i-1;
       while(start<=i-2){
           cout<<"*";
           start++;
       }
       int k=n-i+1;
       while(k>=1){
           cout<<k;
           k--;
       }
       cout<<endl;
       i++;
        
    }

    return 0;
}
