class Solution {
public:
    double myPow(double x, int n) {
        if(n==0 || x==1)
            return 1;
        if(x==0)
            return 0;

        if(n<0)
            return (abs(n)%2==0 ? myPow(1/(x*x),abs(n)/2) : 1/x*(myPow(1/(x*x),abs(n)/2)));

        return (n%2==0 ? myPow(x*x,n/2) : x*myPow(x*x,n/2));
    }
};
